@page "/counter"
@using System.Net
@using Bookings.Client.Services
@inject  ContentHttpClient HttpClient; 
@inject  AuthenticationHttpClient AuthHttpClient; 
<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private async void IncrementCount()
    {
        var something = await  (await HttpClient.HttpClient.GetAsync("isAlive")).Content.ReadAsStringAsync();
 
        currentCount++;
    }

}